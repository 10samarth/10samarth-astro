---
import LatestPosts from "../components/LatestPosts.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "10Samarth";
const description = "The perfect starter for your perfect blog.";
const permalink = Astro.site?.href;
---

<BaseLayout title={title} description={description} permalink={permalink || ""}>
  <div class="home-container">
    <div class="home-copy">
      <div class="flex flex-col lg:flex-row gap-[70px] justify-center">
        <img
          src="/assets/desktop.webp"
          alt="Illustration of a coder"
          width="370"
          class="rounded-md"
        />
        <div>
          <h1>Hi, I'm Samarth ðŸ‘‹</h1>
          <p>
            Welcome to my website! I'm a software engineer passionate about
            creating fantastic software and having a little bit of fun while
            doing it. With experience in technologies like Java, .NET, and
            Javascript, I have the skills to tackle any project and bring your
            ideas to life. Please take a look around, and let's make some magic
            together!
          </p>
        </div>
      </div>
    </div>

    <div class="hero-image-container"></div>
  </div>
  <hr />
  <div class="mx-auto">
    <LatestPosts />
    <a href="/tags" class="mt-[35px] inline-block px-6 py-2 text-white bg-gray-600 rounded-lg shadow hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
      Search by Tags
    </a>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
