---
const { title, pubDate, description, tags, href, image } = Astro.props;
---

<a href={href} class="card shadow-lg rounded-lg">
  <h2>{title}</h2>
  <p class="publish-date">{pubDate}</p>
  {image?.url && <img src={image.url} class="image-fill rounded-md" alt={image.alt} />}
  <p class="description">{description}</p>
  <div class="tags">
    {tags.map((tag: any) => <span class="tag-pill">{tag}</span>)}
  </div>
</a>

<style>
  .image-fill {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  .card {
    padding: 16px;
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.2s;
  }
  .card:hover {
    transform: scale(1.05);
  }
  .publish-date {
    font-size: 0.85rem;
    margin-bottom: 8px;
  }
  .description {
    font-size: 1rem;
    margin-bottom: 16px;
  }
</style>
